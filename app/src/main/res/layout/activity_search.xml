<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/search_service"
        style="@style/search_service" />

    <TextView
        android:id="@+id/introduce_text"
        android:text="@string/search_text"
        style="@style/search_text" />

    <EditText
        android:id="@+id/search_text"
        style="@style/edit_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_double"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_numberResults"
            android:text="@string/number_results"
            style="@style/text_numberResults" />

        <TextView
            android:id="@+id/number_results"
            android:text="1"
            style="@style/text_numberResults"
            android:layout_marginLeft="@dimen/padding_double"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar_numberResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/seekbar_numberResults" />

    <Button
        android:id="@+id/search_button"
        android:text="@string/search_button"
        style="@style/search_button" />

</LinearLayout>
